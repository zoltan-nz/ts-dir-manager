{
  "name": "dir-manager",
  "bin": {
    "dirmanager": "./dist/dir-manager.js"
  },
  "version": "0.0.1",
  "description": "",
  "main": "./dist/dir-manager.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "lint": "./node_modules/.bin/tslint --project ./tsconfig.json --fix",
    "build": "tsc",
    "watch:build": "tsc --watch",
    "test": "./node_modules/.bin/mocha",
    "watch:test": "./node_modules/.bin/chokidar ./src/**/*.ts ./test/**/*.ts --initial --silent -c mocha",
    "debug:test": "node --inspect-brk $(which mocha)",
    "watch:lint": "chokidar ./src/**/*.ts ./test/**/*.ts --initial --silent -c 'npm -s run lint'",
    "watch:run": "DEBUG='dir-manager' nodemon -w ./ -x time node ./dist/dir-manager.js ./test/fixtures/fixture-directory",
    "dev": "./node_modules/.bin/concurrently --raw 'npm run watch:build' 'npm run watch:test' 'npm run watch:lint' 'npm run watch:run'",
    "start": "npm run dev"
  },
  "keywords": [],
  "author": "Zoltan",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/chalk": "^2.2.0",
    "@types/debug": "0.0.30",
    "@types/klaw-sync": "^1.1.3",
    "@types/lodash": "^4.14.80",
    "@types/mocha": "^2.2.44",
    "@types/mz": "0.0.32",
    "@types/node": "^8.0.47",
    "chai": "^4.1.2",
    "chokidar": "^1.7.0",
    "concurrently": "^3.5.0",
    "mocha": "^4.0.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.7.0-dev.20171029"
  },
  "dependencies": {
    "async-file": "^2.0.2",
    "chalk": "^2.3.0",
    "debug": "^3.1.0",
    "klaw-sync": "^3.0.2",
    "lodash": "^4.17.4",
    "mz": "^2.7.0"
  }
}
